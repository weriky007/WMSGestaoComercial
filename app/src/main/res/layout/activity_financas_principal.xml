<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/fundo_tela">

    <ImageButton
        android:id="@+id/btn_contas_a_pagar"
        android:layout_width="@dimen/_90sdp"
        android:layout_height="@dimen/_45sdp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/botao_arredondado"
        android:backgroundTint="#673AB7"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/ic_action_btn_contas_a_pagar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/text_contas_a_pagar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contas a pagar"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:textSize="@dimen/_10sdp"
        app:layout_constraintEnd_toEndOf="@+id/btn_contas_a_pagar"
        app:layout_constraintStart_toStartOf="@+id/btn_contas_a_pagar"
        app:layout_constraintTop_toBottomOf="@+id/btn_contas_a_pagar" />

    <ImageButton
        android:id="@+id/btn_contas_a_receber"
        android:layout_width="@dimen/_90sdp"
        android:layout_height="@dimen/_45sdp"
        android:layout_marginStart="8dp"
        android:background="@drawable/botao_arredondado"
        android:backgroundTint="#673AB7"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/ic_action_btn_contas_a_receber"
        app:layout_constraintStart_toEndOf="@+id/btn_contas_a_pagar"
        app:layout_constraintTop_toTopOf="@+id/btn_contas_a_pagar"/>

    <TextView
        android:id="@+id/text_contas_a_receber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contas a receber"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:textSize="@dimen/_10sdp"
        app:layout_constraintEnd_toEndOf="@+id/btn_contas_a_receber"
        app:layout_constraintStart_toStartOf="@+id/btn_contas_a_receber"
        app:layout_constraintTop_toBottomOf="@+id/btn_contas_a_receber" />

    <ImageButton
        android:id="@+id/btn_contas_recebidas"
        android:layout_width="@dimen/_90sdp"
        android:layout_height="@dimen/_45sdp"
        android:layout_marginStart="8dp"
        android:background="@drawable/botao_arredondado"
        android:backgroundTint="#673AB7"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/ic_action_btn_contas_recebidas"
        app:layout_constraintStart_toEndOf="@+id/btn_contas_a_receber"
        app:layout_constraintTop_toTopOf="@+id/btn_contas_a_receber"/>

    <TextView
        android:id="@+id/text_contas_recebidas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contas recebidas"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:textSize="@dimen/_10sdp"
        app:layout_constraintEnd_toEndOf="@+id/btn_contas_recebidas"
        app:layout_constraintStart_toStartOf="@+id/btn_contas_recebidas"
        app:layout_constraintTop_toBottomOf="@+id/btn_contas_recebidas" />

    <ImageButton
        android:id="@+id/btn_contas_pagas"
        android:layout_width="@dimen/_90sdp"
        android:layout_height="@dimen/_45sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:background="@drawable/botao_arredondado"
        android:backgroundTint="#673AB7"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/ic_action_btn_contas_pagas"
        app:layout_constraintStart_toStartOf="@+id/btn_contas_a_pagar"
        app:layout_constraintTop_toBottomOf="@+id/text_contas_a_pagar"/>

    <TextView
        android:id="@+id/text_contas_pagas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contas pagas"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:textSize="@dimen/_10sdp"
        app:layout_constraintEnd_toEndOf="@+id/btn_contas_pagas"
        app:layout_constraintStart_toStartOf="@+id/btn_contas_pagas"
        app:layout_constraintTop_toBottomOf="@+id/btn_contas_pagas" />

    <ImageButton
        android:id="@+id/btn_caixa"
        android:layout_width="@dimen/_90sdp"
        android:layout_height="@dimen/_45sdp"
        android:background="@drawable/botao_arredondado"
        android:backgroundTint="#673AB7"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/ic_action_btn_fluxo_caixa"
        android:layout_marginStart="@dimen/_8sdp"
        app:layout_constraintStart_toEndOf="@+id/btn_contas_pagas"
        app:layout_constraintBottom_toBottomOf="@+id/btn_contas_pagas"/>

    <TextView
        android:id="@+id/text_caixa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fluxo de Caixa"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:textSize="@dimen/_10sdp"
        app:layout_constraintEnd_toEndOf="@+id/btn_caixa"
        app:layout_constraintStart_toStartOf="@+id/btn_caixa"
        app:layout_constraintTop_toBottomOf="@+id/btn_caixa" />


    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_grafic_contas"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_270sdp"
        android:layout_marginTop="@dimen/_27sdp"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:layout_marginBottom="@dimen/_15sdp"
        app:layout_constraintTop_toBottomOf="@+id/text_contas_pagas"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <LinearLayout
            android:id="@+id/linear_grafic_contas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        </LinearLayout>
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>