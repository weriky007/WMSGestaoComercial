<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardViewContaPaga"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_8sdp"
    android:layout_marginStart="@dimen/_8sdp"
    android:layout_marginEnd="@dimen/_8sdp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="@dimen/_8sdp">

        <TextView
            android:id="@+id/item_conta_paga"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_8sdp"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/item_txt_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="Data Pagamento: "
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/item_conta_paga"
            app:layout_constraintStart_toStartOf="@+id/item_conta_paga"/>

        <TextView
            android:id="@+id/item_conta_paga_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_marginBottom="@dimen/_8sdp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/item_txt_data"
            app:layout_constraintTop_toTopOf="@+id/item_txt_data"/>

        <TextView
            android:id="@+id/item_txt_conta_paga_hora"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="|   Hora: "
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginBottom="@dimen/_8sdp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/item_conta_paga_data"
            app:layout_constraintTop_toTopOf="@+id/item_conta_paga_data"/>

        <TextView
            android:id="@+id/item_conta_paga_hora"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_marginBottom="@dimen/_8sdp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/item_txt_conta_paga_hora"
            app:layout_constraintTop_toTopOf="@+id/item_txt_conta_paga_hora"/>

        <TextView
            android:id="@+id/item_txt_conta_paga_cod_barras"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="CÃ³d Barras:"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/item_txt_data"
            app:layout_constraintStart_toStartOf="@+id/item_txt_data"/>

        <TextView
            android:id="@+id/item_conta_paga_cod_barras"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_8sdp"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/item_txt_conta_paga_cod_barras"
            app:layout_constraintBottom_toBottomOf="@+id/item_txt_conta_paga_cod_barras"/>

        <TextView
            android:id="@+id/item_txt_conta_paga_valor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textStyle="bold"
            android:text="R$"
            app:layout_constraintTop_toBottomOf="@+id/item_txt_conta_paga_cod_barras"
            app:layout_constraintStart_toStartOf="@+id/item_txt_conta_paga_cod_barras"/>

        <TextView
            android:id="@+id/item_conta_paga_valor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginStart="@dimen/_8sdp"
            app:layout_constraintStart_toEndOf="@+id/item_txt_conta_paga_valor"
            app:layout_constraintTop_toTopOf="@+id/item_txt_conta_paga_valor"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>

