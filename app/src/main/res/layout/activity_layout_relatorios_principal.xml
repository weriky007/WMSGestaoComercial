<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/fundo_tela">

    <ImageButton
        android:id="@+id/btnPrincipalHistoricoVendasActivity"
        android:layout_width="@dimen/_90sdp"
        android:layout_height="@dimen/_45sdp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/botao_arredondado"
        android:backgroundTint="#F44336"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/ic_action_btn_historico_vendas"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/textViewRelatorios"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vendas"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:textSize="@dimen/_10sdp"
        app:layout_constraintEnd_toEndOf="@+id/btnPrincipalHistoricoVendasActivity"
        app:layout_constraintStart_toStartOf="@+id/btnPrincipalHistoricoVendasActivity"
        app:layout_constraintTop_toBottomOf="@+id/btnPrincipalHistoricoVendasActivity" />

</androidx.constraintlayout.widget.ConstraintLayout>